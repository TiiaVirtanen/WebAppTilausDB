@model IEnumerable<WebAppTilausDB.Models.Henkilot>

@{
    ViewBag.Title = "TilausDB - Henkilöt";
}

<h2>Henkilöt</h2>
<h5>@Model.Count() henkilöä</h5>

<p>
    @Html.ActionLink("Luo uusi", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Henkilo_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Etunimi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sukunimi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sahkoposti)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Henkilo_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Etunimi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sukunimi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sahkoposti)
        </td>
        <td>
            @Html.ActionLink("Muokkaa", "Edit", new { id=item.Henkilo_id }) |
            @Html.ActionLink("Lisätiedot", "Details", new { id = item.Henkilo_id }) |
            @Html.ActionLink("Poista", "Delete", new { id = item.Henkilo_id })
        </td>
    </tr>
}

</table>
