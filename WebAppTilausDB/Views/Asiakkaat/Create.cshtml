@model WebAppTilausDB.Models.Asiakkaat

@{
    ViewBag.Title = "TilausDB - Luo uusi";
}

<h2>Luo uusi</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
